1. #show => #misc#show
2. #grab_default => #misc#grab_default

3. Separator/Box:
     #pack => #add
     #pack ~padding:5 => (fun w -> hbox#pack_start w false true (*~padding:*)5)
4. Notebook:
     #append_page w => #append_page w None
     #switch_page (fun i -> ..) => #switch_page (fun w i -> ..)
4. Table:
     #attach =>
     let attach (tbl : #TableG.table) ~left ~top ?(right=left+1) ?(bottom=top+1)
         ?(xoptions=[]) ?(yoptions=[])
         ?(xpadding=0) ?(ypadding=0) w =
       tbl#attach w left top right bottom xoptions yoptions xpadding ypadding

5. AboutDialog:
     ~name => ~program_name
5. Table:
     ~columns => ~n_columns
     ~rows => ~n_rows
5. LinkButton:
     uri => ~uri

